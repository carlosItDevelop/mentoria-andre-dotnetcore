@using SmartAdmin.WebUI.ViewModels;

@model RegisterViewModel

@{
    ViewData ["PageName"] = "register";
}

@section PageHeading {
    <div class="col-xl-12">
        <h2 class="fs-xxl fw-500 text-white text-center">
            Registre-se agora. É grátis!!
            <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down">
                Aproveite ao máximo todos os recursos do nosso sistema. Basta estar registrado pára ter acesso as features.
                <br>Está pronto. Então vamos começar!
            </small>
        </h2>
    </div>
}

<div class="col-xl-6 ml-auto mr-auto">
    <div class="card p-4 rounded-plus bg-faded">

        @*<form id="js-login" asp-route-returnUrl="@Model.ReturnUrl" method="post">*@

        <form id="js-login" method="post">
            <div asp-validation-summary="All" class="alert alert-primary text-dark"></div>

            <div class="form-group">
                <label class="form-label" asp-for="Email">Email will be needed for verification and account recovery</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email for verification" value="drlantern@gotbootstrap.com" required="required" />
                <span class="invalid-feedback" asp-validation-for="Email">Sorry, you missed this one.</span>
                <div class="help-block">Your email will also be your username</div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Password">Please pick a password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Email for verification (minimum 6 characters)" value="Password123!" required="required" />
                <span class="invalid-feedback" asp-validation-for="Password">O campo Senha é obrigatório.</span>
                <div class="help-block">A senha teve conter de 6 a 20 caracteres, letras e números, não deve conter espaços ou emojis.</div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="ConfirmPassword">Por favor, confirme a senha</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Email for verification (minimum 6 characters)" value="Password123!" required="required" />
                <span class="invalid-feedback" asp-validation-for="ConfirmPassword">Sorry, you missed this one.</span>
            </div>

@*             <div class="form-group demo">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="Input.AgreeToTerms" />
                    <label class="custom-control-label" asp-for="Input.AgreeToTerms">I agree to terms & conditions</label>
                    <span class="invalid-feedback" asp-validation-for="Input.AgreeToTerms">You must agree before proceeding.</span>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="Input.SignUp" />
                    <label class="custom-control-label" asp-for="Input.SignUp">Sign up for newsletters (don't worry, we won't send that many)</label>
                </div>
            </div> *@

            <div class="row no-gutters">
                <div class="col-md-6 ml-auto text-right">
                    <button id="js-login-btn" type="submit" class="btn btn-block btn-danger btn-lg mt-3">Enviar verificação e registrar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#js-login-btn").click(function (event) {
            // Fetch form to apply custom Bootstrap validation
            var form = $("#js-login");

            if (form[0].checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.addClass('was-validated');
            // Perform ajax submit here...
        });
    </script>
}
